{
  "name": "btp-management-app",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^2.5.1",
    "@sap-cloud-sdk/connectivity": "^4.3.1",
    "@sap-cloud-sdk/http-client": "^4.3.1",
    "@sap-cloud-sdk/resilience": "^4.2.0",
    "@sap/cds": "^9.6.4",
    "@sap/ux-ui5-tooling": "^1.20.1",
    "express": "^4"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.11.0",
    "@cap-js/sqlite": "^2",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-autoadmin": "cds watch --open com.zeiss.autoadmin/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-autoadmin-config": "cds watch --open autoadminconfig/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "hana"
      },
      "BTP_MANAGEMENT_API": {
        "kind": "rest",
        "credentials": {
          "destination": "BTP_MANAGEMENT_API"
        }
      },
      "BTP_XSUAA_API": {
        "kind": "rest",
        "credentials": {
          "destination": "BTP_XSUAA_API"
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/autoadmin",
    "app/autoadmin-config"
  ]
}
